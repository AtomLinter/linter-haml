{
  "name": "linter-haml",
  "main": "./lib/main.js",
  "version": "2.1.0",
  "description": "Atom linter plugin for HAML, using haml-lint",
  "repository": "https://github.com/AtomLinter/linter-haml",
  "private": true,
  "license": "MIT",
  "engines": {
    "atom": ">=1.4.0 <2.0.0"
  },
  "configSchema": {
    "executablePath": {
      "default": "haml-lint",
      "description": "This is the absolute path to your `haml-lint` command. You may need to run `which haml-lint` or `rbenv which haml-lint` to find this.",
      "type": "string"
    },
    "globalHamlLintYmlFile": {
      "default": "",
      "description": "Full path to a global Haml lint file, if no other is found",
      "type": "string"
    }
  },
  "dependencies": {
    "atom-linter": "10.0.0",
    "atom-package-deps": "5.0.0",
    "escape-html": "1.0.3"
  },
  "package-deps": [
    "linter:2.0.0",
    "language-haml"
  ],
  "providedServices": {
    "linter": {
      "versions": {
        "2.0.0": "provideLinter"
      }
    }
  },
  "scripts": {
    "test": "apm test",
    "lint": "eslint ."
  },
  "devDependencies": {
    "eslint": "5.13.0",
    "eslint-config-airbnb-base": "13.1.0",
    "eslint-plugin-import": "2.16.0",
    "jasmine-fix": "1.3.1"
  },
  "renovate": {
    "extends": [
      "config:base"
    ]
  },
  "eslintConfig": {
    "extends": "airbnb-base",
    "rules": {
      "global-require": "off",
      "import/no-unresolved": [
        "error",
        {
          "ignore": [
            "atom"
          ]
        }
      ]
    },
    "globals": {
      "atom": true
    },
    "env": {
      "node": true
    }
  }
}
